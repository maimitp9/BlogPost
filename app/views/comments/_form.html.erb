<%= form_for([@post, @post.comments.build]) do |f| %>
	<p>
		<%= f.label :name, value: 'First Name:' %><br>
		<%= f.text_field :name, placeholder: 'Enter Your First Name' %>
	</p>
	<p>
		<%= f.label :body, value: 'Write Comment' %><br>
		<%= f.text_area :body, placeholder: 'Enter your comment here' %>
	</p>
	<p>
		<%= f.submit :submit, value: 'Post Comment' %>
	</p>
<% end %>